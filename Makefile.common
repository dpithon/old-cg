.PHONY: clean purge deps all tags run conf push

CC=gcc
LD=gcc

OBJS=pinhole.o demo1.o sampler.o scene.o log.o render.o\
     plane.o sphere.o vmath.o ipoint.o material.o\
     paraboloid.o cylinder.o pixmap.o cone.o stack.o\
     quadric.o rgb.o pool.o

all: conf demo1

conf:
	@echo
	@echo "###############################################################"
	@echo "CFLAGS :" $(CFLAGS)
	@echo "LDFLAG :" $(LDFLAGS)
	@echo "###############################################################"
	@echo

run: demo1
	@echo "RUN"
	@./demo1
	@echo "CONVERT"
	@convert -delay 4 -loop 0 a*.pnm demo1.gif

clean:
	@rm -rf *.o *.gcda *.gcno *.info *.bak *.pnm
	@echo "CLEAN"

purge: clean
	@rm -rf raycaster demo1 demo1.gif html x11colors
	@echo "PURGE"

deps:
	@$(CC) -MM *.c >Makefile.deps
	@echo "DEPS"

demo1: $(OBJS) 
	@$(LD) $(OBJS) -o $@ $(LDFLAGS) 
	@echo "LD $@"

tags:
	rm -f tags
	ctags -R --exclude='.git' .

push:
	git push
	git push github master

x11colors: x11colors.o
	@$(LD) $< -o $@ $(LDFLAGS) 
	@echo "LD $@"

include Makefile.deps

%.o: %.c
	@$(CC) $(CFLAGS) -c -o $@ $<
	@echo "CC $<"
